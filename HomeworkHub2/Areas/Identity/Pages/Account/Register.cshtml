@page
@model RegisterModel


<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-4 border border-white bg-gradient rounded table-bordered">


        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>Create a new acc</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control border border-white" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>




            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control border border-white" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control border border-white" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <h1> </h1>
            <div><button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-light">Register</button></div>
            <h1> </h1>
        </form>

    </div>

    <section>

        <h1> </h1>

        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {

            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                    <div>
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        </p>
                    </div>
                </form>
            }
        }
    </section>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
