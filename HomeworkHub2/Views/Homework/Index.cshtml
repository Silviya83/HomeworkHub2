@model IEnumerable<HomeworkHub2.Models.Homework>

@{
    ViewData["Title"] = "Index";
}

<h1>Homework</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.IsGraded)
            </th>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.Solution)
            </th>
            @*  <th>
            @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.AssignmentId)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p style="color:white;">
                        @Html.DisplayFor(modelItem => item.Grade)
                        @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> *@
                </td>

                <td>
                    <p style="color:white;">
                        @Html.DisplayFor(modelItem => item.IsGraded)
                        @*   <a asp-action="Details" asp-route-id="@item.Id">Details</a> *@
                </td>

                <td>
                    <p style="color:white;">
                        @Html.DisplayFor(modelItem => item.Solution)
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="Create">Create New</a>
                    </td>
                }
                else
                {

                }
            </tr>
        }
    </tbody>
</table>
