@model IEnumerable<HomeworkHub2.Models.StudentAssignment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.AssignmentId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p style="color:white;"> @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    <p style="color:white;"> @Html.DisplayFor(modelItem => item.AssignmentId)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Create">Create New</a>
                    </td>
                }
                else
                {

                }
            </tr>
        }
    </tbody>
</table>
