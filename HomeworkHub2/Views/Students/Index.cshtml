@model IEnumerable<HomeworkHub2.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                <p style="color:white;">@Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.Class)
            </th>
            @*  <th>
            <p style="color:white;" @Html.DisplayNameFor(model => model.ClassId)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p style="color:white;">
                        @Html.DisplayFor(modelItem => item.FirstName)
                        @*                         <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    *@
                </td>

                <td>
                    <p style="color:white;">
                        @Html.DisplayFor(modelItem => item.LastName)
                        @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> *@
                </td>

                <td>
                    <p style="color:white;">
                        @Html.DisplayFor(modelItem => item.Email)
                        @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> *@
                </td>

                <td>
                    <p style="color:white;">
                        @Html.DisplayFor(modelItem => item.Class)
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="Create">Create New</a>
                    </td>
                }
                else
                {

                }
            </tr>
        }
    </tbody>
</table>
