@model IEnumerable<HomeworkHub2.Models.TeacherSubject>

@{
    ViewData["Title"] = "Index";
}

<h1>Teachers&Subjects</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
else
{

}

<table class="table">
    <thead>
        <tr>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th>
                <p style="color:white;"> @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <p style="color:white;"> @Html.DisplayFor(modelItem => item.Teacher.LastName)
            </td>
            <td>
                    <p style="color:white;"> @Html.DisplayFor(modelItem => item.Subject.Name)
            </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |

                    </td>
                }
                else
                {

                }
          
        </tr>
}
    </tbody>
</table>
